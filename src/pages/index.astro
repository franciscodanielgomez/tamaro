---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/landing/Hero.astro";
import LogoCloud from "@/components/landing/LogoCloud.astro";
import Work from "@/components/landing/Work.astro";
import Howitworks from "@/components/landing/Howitworks.astro";
import AllScope from "@/components/landing/AllScope.astro";
import Testimonials from "@/components/landing/Testimonials.astro";
import Pricing from "@/components/landing/Pricing.astro";
import Faq from "@/components/landing/Faq.astro";
import Cta from "@/components/global/Cta.astro";
import Contact from "../components/landing/Contact.astro";

---

<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Ibarra+Real+Nova&display=swap">
  <style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    :root {
      font-family: 'Ibarra Real Nova', sans-serif;
      font-feature-settings:
          "liga" 1,
          "calt" 1, /* Contextual Alternates */
          "dlig" 1, /* Discretionary Ligatures */
          "ss07" 1, /* fSquare punctuation */
          "ss08" 1, /* Square quotes */
          "zero" 1, /* Slashed zero */
          "tnum" 1, /* Tabular numbers */
          "cv03" 1, /* Open six */
          "cv04" 1, /* Open nine */
          "cv01" 1, /* Alternate one */
          "cv09", /* Flat-top three */
          "cv02" 1; /* Open 4 */
    }

    @supports (font-variation-settings: normal) {
      /* Use variable font if supported */
      :root {
        font-family: 'Ibarra Real Nova', sans-serif;
      }
    }
  </style>
</head>

<BaseLayout>
  <Hero />
  <Work />
  <Howitworks />
  <Pricing />
  <Faq />
  <Contact />
</BaseLayout>
