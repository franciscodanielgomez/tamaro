---
import {designwork} from "../../data/designwork.json";
---
<section class="scroll-mt-24" id="how">


    <div class="px-8 md:px-12  max-w-2xl mx-auto">
        <div class="p-8 bg-black rounded-3xl">
            <div class="inline-flex items-center  w-full border-white/10">
                <p class="text-3xl text-white">Salsas</p>
            </div>
        </div>

        <div class="max-w-2xl mx-auto">

            <div x-data="{selected:null}">
                <ul
                        class="list-none text-black bg-white rounded-3xl divide-y mt-8"
                        role="list"
                        @click="open = !open"
                >
                    <li class="relative">
                        <button
                                class="w-full p-4 text-left"
                                @click="selected !== 1 ? selected = 1 : selected = null"
                                type="button"
                        >
                            <div class="items-center flex justify-between text-black">
                                <p class="text-lg tracking-tight text-black">
                                    Salsas rojas

                                </p>
                                <svg
                                        class="ml-4 duration-200 h-5 inline rotate-180 transform transition-transform w-5"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg"
                                        :class="{'rotate-180': open, 'rotate-0': !open}"
                                >
                                    <path
                                            d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
                                            clip-rule="evenodd"
                                            fill-rule="evenodd"></path>
                                </svg
                                >
                            </div>
                        </button
                        >
                        <div
                                class="relative overflow-hidden duration-700 max-h-0 transition-all"
                                style=""
                                x-bind:style="selected == 1 ? 'max-height: ' + $refs.container1.scrollHeight + 'px' : ''"
                                x-ref="container1"
                        >
                            <div class="text-sm text-zinc-500 p-4 pt-0">
                                <div class="items-center justify-center w-full flex flex-col shrink-0 snap-start"
                                     role="option" x-bind="disableNextAndPreviousButtons">
                                    <img src="/roja.png" alt=""
                                         style="border-top-left-radius: 18px; border-top-right-radius: 18px; border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;"/>
                                </div>
                                <br>

                                <table class="w-full divide-y divide-gray-200">
                                    <thead class="bg-red-700">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider rounded-tl-2xl">
                                            500 gramos para 4 porciones
                                        </th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider rounded-tr-2xl">
                                            500 gramos
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-6 py-4">Bolognesa</td>
                                        <td class="px-6 py-4 text-right">$4000</td>
                                    </tr>
                                    <tr>
                                        <td class="px-6 py-4">Tuco</td>
                                        <td class="px-6 py-4 text-right">$3100</td>
                                    </tr>
                                    <tr>
                                        <td class="px-6 py-4">Salsa con pollo</td>
                                        <td class="px-6 py-4 text-right">$3600</td>
                                    </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                    <li class="relative">
                        <button
                                class="w-full p-4 text-left"
                                @click="selected !== 2 ? selected = 2 : selected = null"
                                type="button"
                        >
                            <div class="items-center flex justify-between text-black">
                                <p class="text-lg tracking-tight text-black">
                                    Salsas especiales
                                </p>
                                <svg
                                        class="ml-4 duration-200 h-5 inline rotate-180 transform transition-transform w-5"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                        xmlns="http://www.w3.org/2000/svg"
                                        :class="{'rotate-180': open, 'rotate-0': !open}"
                                >
                                    <path
                                            d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
                                            clip-rule="evenodd"
                                            fill-rule="evenodd"></path>
                                </svg
                                >
                            </div>
                        </button
                        >
                        <div
                                class="relative overflow-hidden duration-700 max-h-0 transition-all"
                                style=""
                                x-bind:style="selected == 2 ? 'max-height: ' + $refs.container2.scrollHeight + 'px' : ''"
                                x-ref="container2"
                        >
                            <div class="text-sm text-zinc-500 p-4 pt-0">
                                <div class="items-center justify-center w-full flex flex-col shrink-0 snap-start"
                                     role="option" x-bind="disableNextAndPreviousButtons">
                                    <img src="/especial.png" alt=""
                                         style="border-top-left-radius: 18px; border-top-right-radius: 18px; border-bottom-left-radius: 18px; border-bottom-right-radius: 18px;"/>
                                </div>
                                <br>

                                <table class="w-full divide-y divide-gray-200">
                                    <thead class="bg-red-700">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider rounded-tl-2xl">
                                            300 gramos para 2 porciones
                                        </th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider rounded-tr-2xl">
                                            300 gramos
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-6 py-4">Crema de leche, champignones y carne</td>
                                        <td class="px-6 py-4 text-right">$5000</td>
                                    </tr>
                                    <tr>
                                        <td class="px-6 py-4">Crema de leche, champignones y pollo</td>
                                        <td class="px-6 py-4 text-right">$5000</td>
                                    </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>